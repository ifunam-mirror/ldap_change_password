%html
  %head
    %title= "Change Ldap Password - #{LdapChangePassword.app['site']['title']}"
    %link{ :charset => "utf-8", :href => "/stylesheets/bootstrap.min.css", :media => "screen", :rel => "stylesheet", :title => "no title", :type => "text/css" }/
    %link{ :charset => "utf-8", :href => "/stylesheets/bootstrap-responsive.min.css", :media => "screen", :rel => "stylesheet", :title => "no title", :type => "text/css" }/
    %link{ :charset => "utf-8", :href => "/stylesheets/jquery.countdown.css", :media => "screen", :rel => "stylesheet", :title => "no title", :type => "text/css" }/
    %script{ :src => "/javascripts/bootstrap.min.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/jquery.min.js", :type => "text/javascript" }
  %body
    - unless current_user.nil?
      .container-fluid
        .topbar
          .fill
            .container
              %ul{:class => 'nav' }
                %li
                  %h2
                    %a{ :href => "#{LdapChangePassword.app['site']['url']}" }= LdapChangePassword.app['site']['title']
              %p{ :class => "pull-right" }
                = current_user.login
                &nbsp;|&nbsp;
                %a{ :href => "/logout" }= t('actions.logout')
    .container
      - [:success, :notice, :error].each do |key|
        - unless flash[key].nil?
          %div{:class => "alert alert-#{key}"}
            %a{:class => "close", :href => "#", 'data-dismiss' => "alert"} x
            = flash[key]
      .content
        =yield
