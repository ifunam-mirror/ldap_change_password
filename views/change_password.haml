.page-header
  %h1= t('change_password.title')
.login
  %form{ :action => "/change_password", :method => "POST" }
    .clearfix
      %label{ :name => 'login'}= t('change_password.form.login')
      .input
        = current_user.login
    .clearfix
      %label{ :name => 'current_password'}= t('change_password.form.current_password')
      .input
        %input{ :type => "password", :name => "current_password", :value => '', :class => "input-medium" }
    .clearfix
      %label{ :name => 'password' }= t('change_password.form.password')
      .input
        %input{ :type => "password", :name => "password", :class => "input-medium" }
    .clearfix
      %label{ :name => 'password_confirmation' }= t('change_password.form.password_confirmation')
      .input
        %input{ :type => "password", :name => "password_confirmation", :class => "input-medium" }
    .clearfix
      = csrf_tag
      = authenticity_token
    .actions
      %input{ :type => "submit", :value => t('actions.change_password'), :class => "btn btn-success" }
      %a{ :href => "/dashboard", :class => 'btn' }= t('actions.cancel')

